<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-body">
                <form action="/links/edit/{{ link.id }}" method="POST">
                    <input type="text" class="form-control" value="{{ link.title }}" name="title" placeholder="Titulo" autofocus>
                    <div class="form-group">
                        <input type="url" class="form-control" value="{{ link.url }}" name="url" placeholder="URL">
                    </div>
                    <div class="form-group">
                        <textarea name="descripcion" rows="2" class="form-control" placeholder="Descripcion">{{ link.descripcion }}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>